<style>
  <% if CustomStyle.current.logo.present? %>
    #logo .home-link {
      margin: 0px;
      width: 230px;
      height: 55px;
      background-image: url("<%= custom_style_logo_path(digest: CustomStyle.current.digest, filename: CustomStyle.current.logo_identifier) %>");
      background-repeat: no-repeat;
      background-position-x: 0px;
      background-position-y: 0px;
      background-size: cover;
    }
  <% end %>

  :root {
  <%  DesignColor.overwritten.each do |design_color| %>
    --<%= design_color.variable %>: <%= design_color.hexcode %>;

    <% if design_color.variable == "primary-color" %>
      --header-bg-color:                    <%= design_color.hexcode %>;
      --header-border-bottom-color:         <%= design_color.hexcode %>;
      --footer-bg-color:                    <%= design_color.hexcode %>;
      --drop-down-selected-bg-color:        <%= design_color.hexcode %>;
      --button--highlight-background-color: <%= design_color.hexcode %>;
      --slider-thumb-color:                 <%= design_color.hexcode %>;
      --main-menu-selected-indicator-color: <%= design_color.hexcode %>;
      --main-menu-bg-selected-background: url() no-repeat <%= design_color.hexcode %>;
      --main-menu-child-bg-selected-color:  <%= design_color.hexcode %>;
    <% end %>

    <% if design_color.variable == "primary-color-dark" %>
      --button--highlight-background-hover-color: <%= design_color.hexcode %>;
      --header-item-bg-hover-color:               <%= design_color.hexcode %>;
      --main-menu-child-bg-hover-color:           <%= design_color.hexcode %>;
      --main-menu-hover-indicator-color:          <%= design_color.hexcode %>;
      --main-menu-bg-hover-background: url() no-repeat <%= design_color.hexcode %>;
      --drop-down-hover-bg-color:                 <%= design_color.hexcode %>;
      --content-link-color:                       <%= design_color.hexcode %>;
      --content-icon-color:                       <%= design_color.hexcode %>;
      --content-link-hover-active-color:          <%= design_color.hexcode %>;
    <% end %>

    <% if design_color.variable == "alternative-color" %>
      --button--alt-highlight-background-hover-color: <%= darken_color design_color.hexcode, 0.82 %>;
    <% end %>
  <% end %>
  }

</style>
